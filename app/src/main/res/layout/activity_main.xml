<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/logintext"
        android:layout_width="49dp"
        android:layout_height="26dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="182dp"
        android:layout_marginTop="53dp"
        android:gravity="top"
        android:text="로그인"
        android:textAppearance="@style/login" />

    <TextView
        android:id="@+id/idtext"
        android:layout_width="33dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="112dp"
        android:gravity="top"
        android:text="아이디"
        android:textAppearance="@style/idtext" />

    <EditText
        android:id="@+id/edid"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="135dp"
        android:background="@drawable/rectangle_1"
        android:hint="휴대폰 번호를 입력해 주세요."
        android:textAppearance="@style/idput" />

    <TextView
        android:id="@+id/passwordtext"
        android:layout_width="44dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="191dp"
        android:gravity="top"
        android:text="비밀번호"
        android:textAppearance="@style/passtext" />

    <EditText
        android:id="@+id/edpassword"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="215dp"
        android:background="@drawable/rectangle_1"
        android:hint="비밀번호를 입력해 주세요."
        android:textAppearance="@style/passput" />


    <Button
        android:id="@+id/loginclick"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="284dp"
        android:background="@drawable/rectangle_2"
        android:text="로그인"
        android:textAppearance="@style/loginbtn" />

    <TextView
        android:id="@+id/findpassword"
        android:layout_width="67dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="176dp"
        android:layout_marginTop="340dp"
        android:gravity="top"
        android:text="비밀번호 찾기"
        android:textAppearance="@style/findpass" />

    <Button
        android:id="@+id/findpasswordbtn"
        android:layout_width="68dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="171dp"
        android:layout_marginTop="340dp"
        android:background="@android:color/transparent"
        android:gravity="top" />

    <TextView
        android:id="@+id/yettext"
        android:layout_width="118dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="123dp"
        android:layout_marginTop="598dp"
        android:gravity="top"
        android:text="아직 회원이 아니신가요?"
        android:textAppearance="@style/yettext" />

    <TextView
        android:id="@+id/membership"
        android:layout_width="44dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="246dp"
        android:layout_marginTop="598dp"
        android:gravity="top"
        android:text="회원가입"
        android:textAppearance="@style/membership" />

    <Button
        android:id="@+id/membershipbtn"
        android:layout_width="47dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="248dp"
        android:layout_marginTop="597dp"
        android:background="@android:color/transparent"
        android:gravity="top" />

    <ImageButton
        android:id="@+id/kakao"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="390dp"
        android:padding="0dp"
        android:src="@drawable/kakao_login" />


</RelativeLayout>