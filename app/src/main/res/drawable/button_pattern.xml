<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#46C1AD"
                android:endColor="#46C1AD"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#46C1AD" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp"/>
        </shape>
    </item>
    <!-- pressed -->
    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#64DAC7"
                android:endColor="#64DAC7"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#64DAC7" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp"/>
        </shape>
    </item>
    <!-- focused -->

    <item>
        <shape>
            <gradient
                android:startColor="#75DECD"
                android:endColor="#75DECD"
                android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="#75DECD" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp"/>
        </shape>
    </item>
    <!-- default -->
</selector>