<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/logintext"
        android:layout_width="49dp"
        android:layout_height="26dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="155.5dp"
        android:layout_marginTop="53dp"
        android:gravity="top"
        android:text="로그인"
        android:textAppearance="@style/login" />

    <TextView
        android:id="@+id/idtext"
        android:text="아이디"
        android:layout_width="33dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:gravity="top"
        android:textAppearance="@style/idtext"/>

    <EditText
        android:id="@+id/edid"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="133dp"
        android:background="@drawable/rectangle_1"
        android:hint="휴대폰 번호를 입력해 주세요."
        android:textAppearance="@style/idput"/>

    <TextView
        android:id="@+id/passwordtext"
        android:layout_width="44dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="192dp"
        android:gravity="top"
        android:text="비밀번호"
        android:textAppearance="@style/passtext"/>

    <EditText
        android:id="@+id/edpassword"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="215dp"
        android:background="@drawable/rectangle_1"
        android:hint="비밀번호를 입력해 주세요."
        android:textAppearance="@style/passput" />

    <Button
        android:id="@+id/loginclick"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="284dp"
        android:background="@drawable/rectangle_2"
        android:text="로그인"
        android:textAppearance="@style/loginbtn" />

    <TextView
        android:id="@+id/findpassword"
        android:layout_width="67dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="146.5dp"
        android:layout_marginTop="340dp"
        android:gravity="top"
        android:text="비밀번호 찾기"
        android:textAppearance="@style/findpass" />

    <Button
        android:id="@+id/findpasswordbtn"
        android:layout_width="68dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="146.5dp"
        android:layout_marginTop="338dp"
        android:background="@android:color/transparent"
        android:gravity="top" />


    <TextView
        android:id="@+id/yettext"
        android:layout_width="118dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="96.5dp"
        android:layout_marginTop="640.49dp"
        android:gravity="top"
        android:text="아직 회원이 아니신가요?"
        android:textAppearance="@style/yettext"/>

    <TextView
        android:id="@+id/membership"
        android:layout_width="44dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="220.5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="640.49dp"
        android:text="회원가입"
        android:textAppearance="@style/membership"
        android:gravity="top" />
    <Button
        android:id="@+id/membershipbtn"
        android:layout_width="47dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="220.5dp"
        android:layout_marginTop="639dp"
        android:background="@android:color/transparent"
        android:gravity="top"/>


</RelativeLayout>