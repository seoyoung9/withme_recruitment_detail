<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordFindResult">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="9.04dp"
        android:layout_height="17.38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:background="@android:color/transparent"
        android:layout_marginTop="22.33dp"
        android:layout_marginStart="15.5dp"/>

    <TextView
        android:id="@+id/txt_find_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="비밀번호 찾기"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:layout_marginTop="64.57dp"
        android:gravity="center"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/txt_find_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_find_pw"
        app:layout_constraintStart_toStartOf="@+id/txt_find_pw"
        app:layout_constraintEnd_toEndOf="@+id/txt_find_pw"
        android:text="회원님의 가입 정보입니다"
        android:textSize="12sp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:gravity="center"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txt_id_is"
        android:layout_width="33dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="아이디"
        android:textSize="12sp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:gravity="top"
        android:layout_marginStart="93.5dp"
        android:layout_marginTop="191.64dp"/>
    <TextView
        android:id="@+id/txt_show_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        app:layout_constraintTop_toTopOf="@id/txt_id_is"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="01000000000"
        android:textSize="12sp"
        android:textColor="@color/basic"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:gravity="top"
        android:layout_marginEnd="94.5dp"/>

    <TextView
        android:id="@+id/txt_name_is"
        android:layout_width="33dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toBottomOf="@id/txt_id_is"
        app:layout_constraintStart_toStartOf="@id/txt_id_is"
        android:text="이름"
        android:textSize="12sp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:gravity="top"
        android:layout_marginTop="26.75dp"/>
    <TextView
        android:id="@+id/txt_show_name"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        app:layout_constraintTop_toTopOf="@id/txt_name_is"
        app:layout_constraintEnd_toEndOf="@id/txt_show_phone_number"
        android:text="아무개"
        android:textSize="12sp"
        android:textColor="@color/basic"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:gravity="top"/>

    <TextView
        android:id="@+id/txt_join_date_is"
        android:layout_width="33dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toBottomOf="@id/txt_name_is"
        app:layout_constraintStart_toStartOf="@id/txt_name_is"
        android:text="가입일"
        android:textSize="12sp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:gravity="top"
        android:layout_marginTop="26.75dp"/>
    <TextView
        android:id="@+id/txt_show_join_date"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        app:layout_constraintTop_toTopOf="@id/txt_join_date_is"
        app:layout_constraintEnd_toEndOf="@id/txt_show_name"
        android:text="2023.01.09"
        android:textSize="12sp"
        android:textColor="@color/basic"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:gravity="top"/>

    <android.widget.Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="356dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="로그인"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:background="@drawable/app_color_background"/>
    <android.widget.Button
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="비밀번호 재설정"
        android:textSize="14sp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:background="@drawable/gray_border"/>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="14dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/txt_name_is"
        app:layout_constraintEnd_toEndOf="@id/txt_show_phone_number"
        app:layout_constraintStart_toStartOf="@+id/txt_id_is"
        app:layout_constraintTop_toBottomOf="@+id/txt_id_is" />


    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="@id/txt_show_name"
        app:layout_constraintStart_toStartOf="@id/txt_name_is"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_is" />

    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="@id/txt_show_join_date"
        app:layout_constraintStart_toStartOf="@id/txt_join_date_is"
        app:layout_constraintTop_toBottomOf="@+id/txt_join_date_is" />

</androidx.constraintlayout.widget.ConstraintLayout>