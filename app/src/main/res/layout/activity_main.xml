<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:background="@android:color/transparent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/txt_find_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="비밀번호 찾기"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:layout_marginTop="88.57dp"
        android:gravity="center"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/txt_find_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_find_pw"
        app:layout_constraintStart_toStartOf="@+id/txt_find_pw"
        app:layout_constraintEnd_toEndOf="@+id/txt_find_pw"
        android:text="비밀번호를 찾을 수 있도록\n성함과 휴대폰 번호를 입력해주세요"
        android:textSize="12sp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:gravity="center"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="180dp"
        android:text="이름"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"/>
    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        app:layout_constraintStart_toStartOf="@id/txt_name"
        android:layout_marginTop="6dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="12dp"
        android:hint="성함을 입력해 주세요"
        android:textSize="13sp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:background="@drawable/gray_border"/>

    <TextView
        android:id="@+id/txt_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="264dp"
        android:text="휴대폰 번호"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"/>
    <EditText
        android:id="@+id/edt_phone_number"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_phone_number"
        app:layout_constraintStart_toStartOf="@id/txt_phone_number"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:padding="12dp"
        android:hint="'-'입력 제외"
        android:textSize="13sp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:background="@drawable/gray_border"/>
    <android.widget.Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/edt_phone_number"
        app:layout_constraintStart_toEndOf="@id/edt_phone_number"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="인증"
        android:textColor="#A3A5A4"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:background="@drawable/btn_phone_certification_background"/>






</androidx.constraintlayout.widget.ConstraintLayout>